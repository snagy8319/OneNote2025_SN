<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OneNote2025" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="Theme.OneNote2025" parent="Base.Theme.OneNote2025" />

    <style name="Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Icon">
        <item name="android:src">@drawable/ic_event_note</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Button">
        <item name="android:layout_margin">20dp</item>
        <item name="android:text">@string/login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ListItem.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItem.Message">
        <item name="android:textSize">16sp</item>
    </style>
</resources>